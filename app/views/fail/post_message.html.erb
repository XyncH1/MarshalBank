<% provide(:title, "Send an Error Message") %>
<div class="MessageBlock">
  <h1>Error Submitted</h1>

  The following error was submitted.<br />
  <PRE><%= @message %></PRE>
  <br />
  Submit another?<br />
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(url: "/fail/sendmessage", authenticity_token: false) do |f| %>

        <%= f.label "Message Text" %>
        <%= f.text_field :message, class: 'form-control' %>
		<br />
        <%= f.label "Base64 Encoded Message" %>
        <%= f.text_field :message64, class: 'form-control' %>
 		<br />
        <%= f.submit "Submit the Error", class: "btn btn-primary" %>
      <% end %>

    </div>
    <%= @test %>
  </div>
</div>
